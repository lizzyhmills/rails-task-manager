<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p><%= "Task is completed" %></p>
<% else  %>
  <p><%= "Task is incomplete" %></p>
<% end %>

<p><%= link_to "Edit", edit_task_path(@task)%></p>
<p><%= link_to "Delete", task_path(@task),
data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
<p><%= link_to "Back to tasks", tasks_path%></p>
